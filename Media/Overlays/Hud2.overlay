Hud2
{
    zorder 200
	
    container Panel(Hud2/Panel)
    {
	  metrics_mode relative
      left 0.8
      top 0.0
      width 0.2
      height 0.15
	  material GreySemiTran
	  

		element TextArea(Hud2/Panel/Text4)
		{
		metrics_mode relative
		 left 0.01
		 top 0.01
         font_name BlueHighwayBig
         char_height 0.03
         colour 1 1 1
         caption Level:
		}
		element TextArea(Hud2/Panel/Text5)
		{
		 left 0.01
		 top 0.05
         font_name BlueHighwayBig
         char_height 0.03
         colour 1 1 1
         caption Remaining:
		}
		element TextArea(Hud2/Panel/Text6)
		{
		 left 0.01
		 top 0.09
         font_name BlueHighwayBig
         char_height 0.03
         colour 1 1 1
         caption EnemyHP:
		}
    }
}



